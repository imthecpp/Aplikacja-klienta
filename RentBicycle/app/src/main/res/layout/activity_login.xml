<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/background"
    tools:context="com.example.dkmb_000.rentbicycle.LoginUser">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="nazwa użytkownika"
        android:ems="10"
        android:maxLength="20"
        android:id="@+id/username"
        android:textAlignment="viewStart"
        android:textSize="14sp"
        android:width="250dp"
        android:layout_marginBottom="41dp"
        android:layout_above="@+id/userPassword"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/login"
        android:layout_width="202dp"
        android:layout_height="45dp"
        android:width="200dp"
        android:background="@mipmap/zaloguj_btn"
        android:onClick="onClickLogin"
        android:layout_marginBottom="17dp"
        android:layout_above="@+id/newaccount"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="20"
        android:id="@+id/userPassword"
        android:hint="hasło"
        android:maxLength="10"
        android:textAlignment="viewStart"
        android:textSize="14sp"
        android:width="250dp"
        android:layout_marginBottom="25dp"
        android:layout_above="@+id/login"
        android:layout_alignStart="@+id/username" />

    <TextView
        android:text="@string/mse_new_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:id="@+id/newaccount"
        android:onClick="onClickNewAccount"
        android:clickable="true"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/userPassword"
        android:layout_marginStart="9dp" />



</RelativeLayout>
